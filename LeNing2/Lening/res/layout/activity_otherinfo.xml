<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_other_back"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/my"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/btn_back" />
        <!-- android:layout_marginLeft="150dp"  调整标题区里左边的距离 -->

        <TextView
            android:id="@+id/tv_other_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="王大锤"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <com.mpyf.lening.Jutil.XCRoundImageView
        android:id="@+id/cm_other_touxiang"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_defualt" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_other_honor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="初入江湖"
            android:textColor="#4D4D4D"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_other_honor_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="100"
            android:textColor="#4D4D4D"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_other_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="男"
            android:textColor="#4D4D4D"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="擅长:"
            android:textColor="#979797"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_other_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="教育、IT等"
            android:textColor="#979797"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="#ECECEC" />

    <TextView
        android:id="@+id/tv_other_jianjie"
        android:layout_width="fill_parent"
        android:layout_height="99dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:textColor="@color/ciyao"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#ECECEC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/rl_other_huida"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_other_huida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="回答"
                android:textColor="@color/my"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_other_huida"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/my" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_other_tiwen"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_other_tiwen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="提问"
                android:textColor="@color/zywz"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_other_tiwen"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/dise" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_other"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>