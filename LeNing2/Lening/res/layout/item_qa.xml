<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.mpyf.lening.Jutil.XCRoundImageView
            android:id="@+id/iv_qaitem_touxiang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_defualt" />

        <TextView
            android:id="@+id/tv_qaitem_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="name"
            android:textColor="@color/zywz"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <ImageView
            
            android:id="@+id/iv_qa_payway"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/know_icon_le" />

        <TextView
            android:id="@+id/tv_qaitem_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/know_icon_news" />

        <TextView
            android:id="@+id/tv_qaitem_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_qaitem_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="title"
        android:textColor="@color/zywz"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_pic1"
            android:layout_width="97dp"
            android:layout_height="90dp"
            android:background="@color/pic" />

        <ImageView
            android:id="@+id/iv_pic2"
            android:layout_width="97dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:background="@color/pic" />

        <ImageView
            android:id="@+id/iv_pic3"
            android:layout_width="97dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:background="@color/pic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_pic4"
            android:layout_width="97dp"
            android:layout_height="90dp"
            android:background="@color/pic" />

        <ImageView
            android:id="@+id/iv_pic5"
            android:layout_width="97dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:background="@color/pic" />

        <ImageView
            android:id="@+id/iv_pic6"
            android:layout_width="97dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:background="@color/pic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_pic7"
            android:layout_width="97dp"
            android:layout_height="90dp"
            android:background="@color/pic" />

        <ImageView
            android:id="@+id/iv_pic8"
            android:layout_width="97dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:background="@color/pic" />

        <ImageView
            android:id="@+id/iv_pic9"
            android:layout_width="97dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:background="@color/pic" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/dise" />

</LinearLayout>