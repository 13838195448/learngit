<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/sv_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_course_rb"
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/iv_course_start1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_margin="7dp"
                        android:src="@drawable/course_icon_star01" />

                    <ImageView
                        android:id="@+id/iv_course_start2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_margin="7dp"
                        android:src="@drawable/course_icon_star01" />

                    <ImageView
                        android:id="@+id/iv_course_start3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_margin="7dp"
                        android:src="@drawable/course_icon_star01" />

                    <ImageView
                        android:id="@+id/iv_course_start4"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_margin="7dp"
                        android:src="@drawable/course_icon_star01" />

                    <ImageView
                        android:id="@+id/iv_course_start5"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_margin="7dp"
                        android:src="@drawable/course_icon_star01" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="15dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/dise"
                    android:minHeight="55dp" >

                    <EditText
                        android:id="@+id/et_course_title"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:background="@color/touming"
                        android:textColor="@color/zywz"
                        android:textSize="16sp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/bt_course_ok"
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/course_btn_send_d" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_course_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/dise" >

                <EditText
                    android:id="@+id/et_course_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:background="@color/dise"
                    android:gravity="top"
                    android:textColor="@color/ptdl"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/dise" />

            <com.mpyf.lening.Jutil.MyListView
                android:id="@+id/lv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>