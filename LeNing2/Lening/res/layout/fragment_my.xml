<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_fr_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_me_bgphoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/rl_me_top"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@color/main" >

                        

                        <TextView
                            android:id="@+id/tv_fr_my_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:ellipsize="end"
                            android:maxWidth="200dp"
                            android:singleLine="true"
                            android:text="我的"
                            android:textColor="@color/dise"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/iv_fr_my_rili"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="12dp"
                            android:src="@drawable/zd_mine_icon_calendar" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_fr_my_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background="#FFFFFF"
                        android:orientation="horizontal" >

                        <com.mpyf.lening.Jutil.XCRoundImageView
                            android:id="@+id/im_fr_my_photo"
                            android:layout_width="62dp"
                            android:layout_height="62dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_defualt" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/im_fr_my_photo"
                            android:layout_marginLeft="12dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_fr_my_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxWidth="120dp"
                                android:singleLine="true"
                                android:text="用户名"
                                android:textColor="@color/ptdl"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_fr_my_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="初入江湖"
                                android:textColor="@color/ciyao"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/zd_mine_icon_point" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/home_next" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_me_kcpx"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginTop="2dp"
                        android:background="#FFFFFF"
                        android:gravity="center" >

                        <LinearLayout
                            android:id="@+id/ll_fr_my_zan"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_fr_my_zan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:text="4"
                                android:textSize="16sp"
                                android:textColor="@color/zywz" />

                            <TextView
                                android:id="@+id/iv_fr_my_zan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="赞"
                                android:textColor="@color/ciyao"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:background="#000000"
                            android:src="@drawable/me_icon_line" /> -->

                        <LinearLayout
                            android:id="@+id/ll_main_me_cai"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_fr_my_lv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:text="36%"
                                android:textSize="16dp"
                                android:textColor="@color/zywz" />

                            <TextView
                                android:id="@+id/iv_fr_my_lv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="采纳率"
                                android:textColor="@color/ciyao"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:background="#000000"
                            android:src="@drawable/me_icon_line" /> -->

                        <LinearLayout
                            android:id="@+id/ll_fr_my_caifu"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_fr_my_caifu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:text="1323"
                                android:textSize="16sp"
                                android:textColor="@color/zywz" />

                            <TextView
                                android:id="@+id/iv_fr_my_caifu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="经验值"
                                android:textColor="@color/ciyao"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_fr_my_ask"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/zd_mine_btn_quiz" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="我的提问"
                        android:textColor="@color/ptdl"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fr_my_answer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/zd_mine_btn_ans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="我的回答"
                        android:textColor="@color/ptdl"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fr_my_cang"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/zd_mine_btn_collection" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="我的收藏"
                        android:textColor="@color/ptdl"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fr_my_biaoqian"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/zd_mine_btn_label" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="我感兴趣的标签"
                        android:textColor="@color/ptdl"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>