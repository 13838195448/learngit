<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <com.mpyf.lening.Jutil.XCRoundImageView
        android:id="@+id/im_comments"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_defualt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp" >

            <TextView
                android:id="@+id/tv_comments_name"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:maxWidth="120dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="回帖人"
                android:textColor="@color/ptdl"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rb_comments"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_comments_name"
                android:isIndicator="true"
                android:orientation="horizontal" />

            
            <TextView
                android:id="@+id/tv_comments_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="回帖时间"
                android:textColor="@color/ciyao"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_comments_context"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="16sp"
            android:text="回帖内容"
            android:textColor="@color/zywz"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>