<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/xiaoxibg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dise"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/my"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/ll_nlrz_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/btn_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="能力认证"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="160dp" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/jianbiansetop" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_nlrz_lunbo"
                        android:layout_width="fill_parent"
                        android:layout_height="160dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/iv_nlrz_lunbo1"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/home_icon_circle_s" />

                        <ImageView
                            android:id="@+id/iv_nlrz_lunbo2"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/home_icon_circle_d" />

                        <ImageView
                            android:id="@+id/iv_nlrz_lunbo3"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/home_icon_circle_d" />
                    </LinearLayout>
                </RelativeLayout>

                <com.mpyf.lening.Jutil.MyGridview
                    android:id="@+id/gv_nlrz_daohang"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:numColumns="4" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/dise" />

                <com.mpyf.lening.Jutil.MyListView
                    android:id="@+id/lv_nlrz_neirong"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_nlrz_bottom"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_nlrz_xuexi"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_nlrz_xuexi"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/authe_btn_xuexi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="学习"
                    android:textColor="@color/ciyao"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_nlrz_test"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_nlrz_ceshi"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/authe_btn_test" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="测试"
                    android:textColor="@color/ciyao"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_alignTop="@+id/ll_nlrz_bottom"
            android:background="@drawable/jianbianse" />

        <RelativeLayout
            android:id="@+id/rl_nlrz_baoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_btn_currency" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="报名"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>