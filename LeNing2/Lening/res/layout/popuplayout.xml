<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000" >

    <LinearLayout
        android:id="@+id/ll_prizepic"
        android:layout_width="259dp"
        android:layout_height="290dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="58dp"
        android:background="@drawable/zd_scratch_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_prizename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:text="赶紧刮开刮奖区看看这张幸运\n		卡里藏着什么吧!"
            android:textColor="#794D3B"
            android:textSize="12sp" />

        <com.mpyf.lening.service.ScratchView
             android:id="@+id/scr_view"
            android:layout_width="195dp"
            android:layout_height="90dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
             />
        <TextView 
            android:id="@+id/tv_guamore"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/zd_sc_btn_again"
            android:text="再刮一次（还剩xx张卡）"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ll_prizepic"
        android:layout_alignTop="@+id/ll_prizepic"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/zd_scratch_btn_close" />

</RelativeLayout>