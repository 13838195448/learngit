<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/tv_kebaoming_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:maxLines="1"
        android:textColor="@color/ptdl"
        android:textSize="16sp"
        android:text="报名名称"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp" 
        android:layout_marginTop="15dp"
        android:gravity="left"
        >
        
        
        <ImageView 
            android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/authe_icon_ins"
        />
        
        <TextView 
            android:id="@+id/tv_kebaoming_name"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/ciyao"
        android:textSize="12sp"
        android:text="认证名称"/>
        
        
        
        <TextView 
            android:id="@+id/tv_kebaoming_type"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/ciyao"
        android:textSize="12sp"
        android:text="认证类型"/>
        
        
    </LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/dise"></LinearLayout>
</LinearLayout>