<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="购买"
            android:textColor="@color/zywz"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/main" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_buy_course"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:background="@color/main" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/iv_buy_course"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_buy_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textColor="@color/ptdl"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_buy_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="需支付:--"
                    android:textColor="@color/ptdl"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/dise" />

        <Button
            android:id="@+id/bt_buy_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定购买"
            android:textColor="@color/main"
            android:background="@android:color/white"
            android:textSize="14sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/dise" />
        <Button
            android:id="@+id/bt_buy_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/ptdl"
            android:background="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>