<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_itemphb_bg"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/text_bg"
         >

        <com.mpyf.lening.Jutil.XCRoundImageView
            android:id="@+id/iv_itemphb_user"
            android:layout_width="43dp"
            android:layout_height="45dp"
            android:layout_marginLeft="26dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_defualt" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_itemphb_user"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_itemphb_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户姓名"
                android:textColor="@color/ptdl"
                android:textSize="15sp" />
            
            <TextView
                android:id="@+id/tv_itemphb_srcoe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="学分:"
                android:textColor="@color/ciyao"
                android:textSize="10sp" />
        </LinearLayout>
        
        <TextView 
            android:id="@+id/tv_itemphb_paiming"
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textStyle="italic"
                android:layout_marginRight="25dp"
                android:textSize="18sp"
                android:textColor="@color/ptdl"
                android:text="NO.1"/>
    </RelativeLayout>

    <View 
         android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/dise"/>
</LinearLayout>