<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yuanjiao"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_bg" />
            
            <ImageView 
                android:id="@+id/iv_qiandao_donghua"
                android:layout_width="270dp"
                android:layout_height="130dp"
                android:layout_centerInParent="true"
                android:background="@drawable/qddh01" />
            
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_qiandao_days"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="连续签到--天"
            android:textColor="@color/zywz"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_qiandao_rule"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="签到说明：\n连续签到一天送2乐币，第二天送4乐币，以此类推，连续签到5天送10乐币"
            android:textColor="@color/ptdl"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_qiandao_ok"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_btn_d"
            android:text="领取乐币×2"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>