<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/xiaoxibg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/my"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/ll_qadetil_back"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/btn_back" />

                <TextView
                    android:id="@+id/tv_qadetil_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="问答详情"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

    <ListView
        android:id="@+id/lv_qadetil"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
         />

    <View
        android:layout_width="fill_parent"
        
        android:layout_height="1dp"
        android:background="@color/dise" />

    <TextView
        android:id="@+id/tv_qadetil_repay"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="编辑问题"
        android:textColor="@color/my"
        android:textSize="16sp" />

</LinearLayout>